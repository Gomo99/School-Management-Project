@model SchoolProject.Models.Module

@{
    ViewData["Title"] = "Module Details";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-info text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-info-circle-fill me-2"></i> Module Details</h4>
        </div>
        <div class="card-body bg-light rounded-bottom-4">
            <dl class="row fs-5">
                <dt class="col-sm-4 text-end fw-semibold">📘 Module Name:</dt>
                <dd class="col-sm-8">@Model.ModuleName</dd>

                <dt class="col-sm-4 text-end fw-semibold">⏱️ Duration:</dt>
                <dd class="col-sm-8">@Model.Duration</dd>

                <dt class="col-sm-4 text-end fw-semibold">🏷️ Type:</dt>
                <dd class="col-sm-8">@Model.ModuleType</dd>

                <dt class="col-sm-4 text-end fw-semibold">📍 Status:</dt>
                <dd class="col-sm-8">
                    <span class="badge @GetStatusBadgeClass(Model.ModuleStatus)">
                        @Model.ModuleStatus
                    </span>
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end bg-white rounded-bottom-4">
            <a asp-action="ManageModules" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(ModuleStatus status)
    {
        return status switch
        {
            ModuleStatus.Active => "bg-success",
            ModuleStatus.Inactive => "bg-secondary",
            _ => "bg-dark"
        };
    }
}

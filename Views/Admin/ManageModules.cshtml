@model IEnumerable<SchoolProject.Models.Module>

@{
    ViewData["Title"] = "Manage Modules";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}
<partial name="_NotificationPartial" />

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4 d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-easel2-fill me-2"></i> Manage Modules</h4>
            <a asp-action="CreateModule" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle me-1"></i> Add Module
            </a>
        </div>
        <div class="card-body bg-light rounded-bottom-4">
            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">No modules found.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark text-center">
                            <tr>
                                <th>Module Name</th>
                                <th>Duration</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var module in Model)
                            {
                                <tr class="text-center">
                                    <td>@module.ModuleName</td>
                                    <td>@module.Duration</td>
                                    <td>@module.ModuleType</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(module.ModuleStatus)">
                                            @module.ModuleStatus
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditModule" asp-route-id="@module.ModuleID" class="btn btn-outline-warning btn-sm">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="DeleteModule" asp-route-id="@module.ModuleID" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-x-circle"></i>
                                            </a>
                                            <a asp-action="ModuleDetails" asp-route-id="@module.ModuleID" class="btn btn-outline-info btn-sm">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(ModuleStatus status)
    {
        return status switch
        {
            ModuleStatus.Active => "bg-success",
            ModuleStatus.Inactive => "bg-secondary",
            _ => "bg-dark"
        };
    }
}

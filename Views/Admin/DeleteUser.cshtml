@model SchoolProject.Models.Account

@{
    ViewData["Title"] = "Delete User";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}
<h2>Delete User</h2>

<h3>Are you sure you want to deactivate this user?</h3>
<div>
    <h4>@Model.Name @Model.Surname</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserStatus)
        </dd>
    </dl>

    <form asp-action="DeleteUserConfirmed">
        <input type="hidden" asp-for="UserID" />
        <input type="submit" value="Deactivate" class="btn btn-danger" />
        <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
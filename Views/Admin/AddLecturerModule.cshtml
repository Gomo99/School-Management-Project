@model SchoolProject.ViewModel.AssignLecturerModulesViewModel

@{
    ViewData["Title"] = "Assign Lecturer to Modules";
}

@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Assign Lecturer to Modules</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddLecturerModule" method="post">
                        <div class="mb-3">
                            <label for="SelectedModuleIDs" class="form-label">Modules</label>
                            <select asp-for="SelectedModuleIDs" class="form-select" asp-items="ViewBag.Modules" multiple size="5">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="UserID" class="form-label">Lecturer</label>
                            <select asp-for="UserID" class="form-select" asp-items="ViewBag.Lecturers">
                                <option value="">Select Lecturer</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="AssignedDate" class="form-label">Date</label>
                            <input asp-for="AssignedDate" type="date" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Assign</button>
                            <a asp-action="ManageLecturerModules" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<SchoolProject.Models.Account>

@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <h2 class="card-title mb-4">User Management</h2>

            <!-- Users Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Role</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Name @user.Surname</td>
                                    <td>@user.Email</td>
                                    <td>@user.Role</td>
                                    <td>
                                        <span class="badge bg-@(user.UserStatus == UserStatus.Active ? "success" : "secondary")">@user.UserStatus</span>
                                    </td>
                                    <td class="d-flex gap-2">
                                        <!-- Edit Button -->
                                        <a asp-action="EditUser" asp-route-id="@user.UserID"
                                           class="btn btn-sm btn-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <!-- Delete/Deactivate Button -->
                                        @if (user.UserStatus == UserStatus.Active)
                                        {
                                            <form asp-action="DeleteUser" asp-route-id="@user.UserID" method="post">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Deactivate"
                                                        onclick="return confirm('Are you sure you want to deactivate this user?')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <!-- Reactivate Button -->
                                            <form asp-action="ReactivateAccount" asp-route-id="@user.UserID" method="post">
                                                <button type="submit" class="btn btn-sm btn-success" title="Reactivate"
                                                        onclick="return confirm('Are you sure you want to reactivate this user?')">
                                                    <i class="bi bi-arrow-clockwise"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No users found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
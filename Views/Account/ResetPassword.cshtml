@{
    ViewData["Title"] = "Reset Password";
}
<partial name="_NotificationPartial" />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-header bg-info text-white text-center rounded-top-4">
                    <h4 class="mb-0">Reset Your Password</h4>
                    <small>Enter the PIN you received via email</small>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label for="pin" class="form-label fw-semibold">6-digit PIN</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                                <input type="text" id="pin" name="pin" class="form-control" maxlength="6" placeholder="Enter PIN" required pattern="^\d{6}$" />
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid 6-digit PIN.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label fw-semibold">New Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="Enter new password" required />
                            </div>
                            <div class="invalid-feedback">
                                Please enter a new password.
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-info btn-lg rounded-pill">
                                <i class="bi bi-check2-circle me-1"></i> Reset Password
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted">
                    Go back to <a href="/Account/Login">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // Function to update the input field styles
        function updateInputStyles(inputElement) {
            if (inputElement.value.trim() === "") {
                inputElement.classList.remove("is-valid");
                inputElement.classList.add("is-invalid");
                inputElement.style.borderColor = "red";  // Red border for empty input
            } else {
                inputElement.classList.remove("is-invalid");
                inputElement.classList.add("is-valid");
                inputElement.style.borderColor = "green";  // Green border for valid input
            }
        }

        // Get all input fields
        const pinInput = document.getElementById("pin");
        const newPasswordInput = document.getElementById("newPassword");

        // Add event listeners for real-time validation
        [pinInput, newPasswordInput].forEach(input => {
            input.addEventListener("input", function () {
                updateInputStyles(input);
            });

            // Initial check on page load to update the styles
            updateInputStyles(input);
        });
    </script>
}

@model SchoolProject.ViewModel.DisableTwoFactorViewModel
@{
    ViewData["Title"] = "Disable Two-Factor Authentication";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<partial name="_NotificationPartial" />


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Disable Two-Factor Authentication</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>Warning:</strong> Disabling 2FA will make your account less secure.
                </div>

                <form asp-action="DisableTwoFactor" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="CurrentPassword"></label>
                        <input asp-for="CurrentPassword" type="password" class="form-control" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="VerificationCode"></label>
                        <input asp-for="VerificationCode" class="form-control" placeholder="Enter 6-digit code" />
                        <span asp-validation-for="VerificationCode" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("ViewProfile")" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger">Disable 2FA</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
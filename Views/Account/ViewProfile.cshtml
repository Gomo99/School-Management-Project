@model SchoolProject.ViewModel.ViewProfileViewModel

@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container mt-4">
    <h2 class="mb-4">Your Profile</h2>

    <div class="card shadow rounded-4 p-4">
        <div class="row gy-3">
            <div class="col-md-6">
                <i class="bi bi-person-circle me-2"></i>
                <strong>Title:</strong> @Model.Title
            </div>
            <div class="col-md-6">
                <i class="bi bi-person-fill me-2"></i>
                <strong>Name:</strong> @Model.Name @Model.Surname
            </div>
            <div class="col-md-6">
                <i class="bi bi-envelope-fill me-2"></i>
                <strong>Email:</strong> @Model.Email
            </div>
           
            <div class="col-md-6">
                <i class="bi bi-person-badge-fill me-2"></i>
                <strong>Role:</strong> @Model.Role
            </div>
            <div class="col-md-6">
                <i class="bi bi-toggle-on me-2"></i>
                <strong>Status:</strong> @Model.UserStatus
            </div>
        </div>

        <div class="d-flex justify-content-start mt-4 gap-2">
            <a asp-action="EditProfile" class="btn btn-outline-primary rounded-pill">
                <i class="bi bi-pencil-square me-1"></i> Edit Profile
            </a>
            <form asp-action="DownloadProfile" method="post">
                <button type="submit" class="btn btn-outline-success rounded-pill">
                    <i class="bi bi-download me-1"></i> Download Profile
                </button>
            </form>

        </div>
    </div>
</div>


<!-- Add this section to your ViewProfile.cshtml -->
<div class="card mt-3">
    <div class="card-header">
        <h5>Security Settings</h5>
    </div>
    <div class="card-body">
        @{
            var user = Context.User;
            var userIdClaim = user.FindFirst("UserID");
            if (userIdClaim != null && int.TryParse(userIdClaim.Value, out int userId))
            {
                var dbUser = ViewBag.User as Account; // You'll need to pass this from controller
                if (dbUser?.IsTwoFactorEnabled == true)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-shield-alt"></i> Two-factor authentication is enabled
                    </div>
                    <a href="@Url.Action("DisableTwoFactor")" class="btn btn-outline-danger">Disable 2FA</a>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Two-factor authentication is disabled
                    </div>
                    <a href="@Url.Action("SetupTwoFactor")" class="btn btn-success">Enable 2FA</a>
                }
            }
        }
    </div>
</div>
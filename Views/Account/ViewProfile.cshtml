@model SchoolProject.ViewModel.ViewProfileViewModel

@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<partial name="_NotificationPartial" />

<div class="container py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 fw-bold text-primary">
                    <i class="bi bi-person-circle me-2"></i>Your Profile
                </h1>
                <div class="btn-group">
                    <a asp-action="EditProfile" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-pencil-square me-2"></i>Edit Profile
                    </a>
                    <form asp-action="DownloadProfile" method="post" class="ms-2">
                        <button type="submit" class="btn btn-outline-primary rounded-pill px-4">
                            <i class="bi bi-download me-2"></i>Download
                        </button>
                    </form>
                </div>
            </div>
            <p class="text-muted">Manage your account settings and security preferences</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Profile Information Card -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-transparent border-0 py-4">
                    <h4 class="card-title mb-0 text-primary">
                        <i class="bi bi-person-badge me-2"></i>Personal Information
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded-3">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="bi bi-person text-primary fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Title</small>
                                    <span class="fw-semibold">@Model.Title</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded-3">
                                <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="bi bi-person-check text-success fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Full Name</small>
                                    <span class="fw-semibold">@Model.Name @Model.Surname</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded-3">
                                <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="bi bi-envelope text-info fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Email Address</small>
                                    <span class="fw-semibold">@Model.Email</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded-3">
                                <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="bi bi-person-rolodex text-warning fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Role</small>
                                    <span class="fw-semibold">@Model.Role</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded-3">
                                <div class="bg-@(Model.UserStatus == "Active" ? "success" : "secondary") bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="bi bi-circle-fill text-@(Model.UserStatus == "Active" ? "success" : "secondary") fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Account Status</small>
                                    <span class="fw-semibold">@Model.UserStatus</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Security Status Card -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg rounded-4 h-100">
                <div class="card-header bg-transparent border-0 py-4">
                    <h4 class="card-title mb-0 text-primary">
                        <i class="bi bi-shield-check me-2"></i>Security Status
                    </h4>
                </div>
                <div class="card-body d-flex flex-column">
                    <!-- Two-Factor Authentication -->
                    <div class="mb-4">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <h6 class="mb-0">Two-Factor Authentication</h6>
                            <span class="badge bg-@(Model.IsTwoFactorEnabled ? "success" : "warning") rounded-pill">
                                @(Model.IsTwoFactorEnabled ? "Enabled" : "Disabled")
                            </span>
                        </div>
                        <p class="text-muted small mb-3">
                            Add an extra layer of security to your account
                        </p>
                        @if (Model.IsTwoFactorEnabled)
                        {
                            <a asp-action="DisableTwoFactor" class="btn btn-outline-danger w-100 rounded-pill mb-2">
                                <i class="bi bi-shield-slash me-2"></i>Disable 2FA
                            </a>
                            <a asp-action="ResendRecoveryCodes" class="btn btn-outline-info w-100 rounded-pill">
                                <i class="bi bi-arrow-repeat me-2"></i>Resend Recovery Codes
                            </a>
                        }
                        else
                        {
                            <a asp-action="SetupTwoFactor" class="btn btn-success w-100 rounded-pill">
                                <i class="bi bi-shield-check me-2"></i>Enable 2FA
                            </a>
                        }
                    </div>

                    <!-- Password Status -->
                    <div class="mt-auto">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0">Password Strength</h6>
                            <span class="badge bg-info rounded-pill">Strong</span>
                        </div>
                        <div class="progress mb-3" style="height: 6px;">
                            <div class="progress-bar bg-success" style="width: 85%"></div>
                        </div>
                        <a asp-action="ChangePassword" class="btn btn-outline-primary w-100 rounded-pill">
                            <i class="bi bi-key me-2"></i>Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Security Cards -->
    <div class="row g-4 mt-2">
        <!-- Device Management -->
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4 h-100">
                <div class="card-header bg-transparent border-0 py-4">
                    <h4 class="card-title mb-0 text-primary">
                        <i class="bi bi-devices me-2"></i>Device Management
                    </h4>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="bi bi-laptop text-primary fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Trusted Devices</h6>
                            <p class="text-muted mb-0 small">Manage your connected devices</p>
                        </div>
                    </div>
                    <p class="text-muted small">
                        Review and manage the devices where you've chosen to "remember" this account.
                        You can revoke access if a device is lost or compromised.
                    </p>
                    <a asp-action="ManageDevices" class="btn btn-outline-secondary w-100 rounded-pill">
                        <i class="bi bi-gear me-2"></i>Manage Devices
                    </a>
                </div>
            </div>
        </div>

        <!-- Activity Log -->
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4 h-100">
                <div class="card-header bg-transparent border-0 py-4">
                    <h4 class="card-title mb-0 text-primary">
                        <i class="bi bi-clock-history me-2"></i>Recent Activity
                    </h4>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="bi bi-activity text-info fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Account Activity</h6>
                            <p class="text-muted mb-0 small">Monitor your account access</p>
                        </div>
                    </div>
                    <div class="activity-list">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <span class="small">Last login: Today at @DateTime.Now.ToString("h:mm tt")</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                            <span class="small">Location: Current location</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-shield-fill-check text-warning me-2"></i>
                            <span class="small">Security: All systems normal</span>
                        </div>
                    </div>
                    <a href="#" class="btn btn-outline-primary w-100 rounded-pill mt-3">
                        <i class="bi bi-list-check me-2"></i>View Full Activity Log
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .rounded-4 {
        border-radius: 1rem !important;
    }

    .bg-opacity-10 {
        opacity: 0.1;
    }

    .activity-list {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 0.75rem;
        padding: 1rem;
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
        }

    .progress {
        border-radius: 1rem;
        overflow: hidden;
    }
</style>
@{
    ViewData["Title"] = "Forgot Password";
}
<partial name="_NotificationPartial" />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-header bg-warning text-dark text-center rounded-top-4">
                    <h4 class="mb-0">Forgot Password</h4>
                    <small>Enter your email to receive a reset PIN</small>
                </div>
                <div class="card-body">
                    <form asp-action="ForgotPassword" method="post" novalidate>
                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold">Email address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                                <input type="email" id="email" name="email" class="form-control" placeholder="you@example.com" required
                                       aria-describedby="emailHelp" />
                            </div>
                            <!-- Bootstrap validation message for email -->
                            <div class="invalid-feedback">
                                Please enter a valid email address.
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg rounded-pill">
                                <i class="bi bi-send-fill me-1"></i> Send Reset PIN
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted">
                    Remembered your password? <a href="/Account/Login">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // Function to update input field styles
        function updateInputStyles(inputElement) {
            if (inputElement.value.trim() === "") {
                inputElement.classList.remove("is-valid");
                inputElement.classList.add("is-invalid");
                inputElement.style.borderColor = "red";  // Red border for empty input
            } else {
                inputElement.classList.remove("is-invalid");
                inputElement.classList.add("is-valid");
                inputElement.style.borderColor = "green";  // Green border for valid input
            }
        }

        // Get the email input field
        const emailInput = document.getElementById("email");

        // Add event listener for real-time validation
        emailInput.addEventListener("input", function () {
            updateInputStyles(emailInput);
        });

        // Initial check to apply styles when page loads (if there is pre-filled data)
        updateInputStyles(emailInput);
    </script>
}

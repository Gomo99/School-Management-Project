@model SchoolProject.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<partial name="_NotificationPartial" />

<div class="d-flex justify-content-center align-items-center vh-100">
    <form asp-action="Login" method="post" class="form_main shadow">
        <p class="heading">Login</p>

        <div asp-validation-summary="All" class="text-danger mb-2"></div>

        <!-- Email -->
        <div class="inputContainer">
            <svg class="inputIcon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#2e2e2e" viewBox="0 0 16 16">
                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v.217l-8 4.8-8-4.8V4z" />
                <path d="M0 6.383v5.634A2 2 0 0 0 2 14h12a2 2 0 0 0 2-2V6.383l-7.555 4.533a1 1 0 0 1-1.11 0L0 6.383z" />
            </svg>
            <input asp-for="Email" class="inputField" id="Email" placeholder="Email or Username" required />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>

        <!-- Password -->
        <div class="inputContainer" style="position: relative;">
            <svg class="inputIcon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#2e2e2e" viewBox="0 0 16 16">
                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
            </svg>
            <input asp-for="Password" type="password" class="inputField" id="Password" placeholder="Password" required />
            <button type="button" id="togglePassword" style="position:absolute; right:5px; top:50%; transform:translateY(-50%); border:none; background:none; cursor:pointer; z-index:3;">
                <i class="bi bi-eye-slash" id="eyeIcon"></i>
            </button>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>

        <!-- Remember Me -->
        <div class="form-check text-start w-100 mt-2">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
        </div>

        <!-- Submit -->
        <button id="button" type="submit">Login</button>

        <!-- Forgot Password -->
        <a class="forgotLink" href="/Account/ForgotPassword">Forgot your password?</a>
        <div class="mt-2 text-center">
            <small>Resend the email verification <a href="/Account/ResendVerificationEmail">Resend the email verification</a></small>
        </div>
    </form>


    <div class="col-md-6">
        <h4>Or login with</h4>

        <form asp-controller="Account" asp-action="GoogleLogin" method="post">
            <button type="submit" class="btn btn-outline-danger btn-lg w-100 mb-3">
                <i class="fab fa-google me-2"></i>Sign in with Google
            </button>
        </form>

        <!-- Add more providers if needed -->
         <form asp-controller="Account" asp-action="MicrosoftLogin" method="post">
            <button type="submit" class="btn btn-outline-primary btn-lg w-100">
                <i class="fab fa-microsoft me-2"></i>Sign in with Microsoft
            </button>
        </form> 
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        const togglePassword = document.getElementById("togglePassword");
        const passwordField = document.getElementById("Password");
        const eyeIcon = document.getElementById("eyeIcon");

        togglePassword.addEventListener("click", function () {
            const type = passwordField.type === "password" ? "text" : "password";
            passwordField.type = type;
            eyeIcon.classList.toggle("bi-eye-slash");
            eyeIcon.classList.toggle("bi-eye");
        });
    </script>
}


<style>
    .form_main {
        width: 320px;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.062);
        position: relative;
        overflow: hidden;
    }

        .form_main::before {
            position: absolute;
            content: "";
            width: 300px;
            height: 300px;
            background-color: rgb(209, 193, 255);
            transform: rotate(45deg);
            left: -180px;
            bottom: 30px;
            z-index: 1;
            border-radius: 30px;
            box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.082);
        }

    .heading {
        font-size: 1.8em;
        color: #2e2e2e;
        font-weight: 700;
        margin-bottom: 20px;
        z-index: 2;
    }

    .inputContainer {
        width: 100%;
        position: relative;
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        z-index: 2;
    }

    .inputIcon {
        position: absolute;
        left: 5px;
    }

    .inputField {
        width: 100%;
        height: 40px;
        background-color: transparent;
        border: none;
        border-bottom: 2px solid #adadad;
        padding-left: 30px;
        font-size: .9em;
        font-weight: 500;
    }

        .inputField:focus {
            outline: none;
            border-bottom: 2px solid #a268ff;
        }

    #button {
        width: 100%;
        border: none;
        background-color: #a268ff;
        height: 40px;
        border-radius: 8px;
        color: white;
        font-size: 1em;
        font-weight: 600;
        margin: 15px 0;
        cursor: pointer;
    }

        #button:hover {
            background-color: #7e54ff;
        }

    .forgotLink {
        font-size: .8em;
        color: rgb(44, 24, 128);
        text-decoration: none;
        z-index: 2;
    }

</style>
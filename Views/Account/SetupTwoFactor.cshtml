@model SchoolProject.ViewModel.TwoFactorSetupViewModel
@{
    ViewData["Title"] = "Setup Two-Factor Authentication";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}



<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Setup Two-Factor Authentication</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>1. Scan QR Code</h5>
                        <p>Scan this QR code with your Google Authenticator app:</p>
                        <img src="@Model.QrCodeImageUrl" alt="QR Code" class="img-fluid" />
                    </div>
                    <div class="col-md-6">
                        <h5>2. Manual Entry</h5>
                        <p>Or enter this key manually:</p>
                        <code>@Model.ManualEntryKey</code>

                        <hr />

                        <h5>3. Verify Setup</h5>
                        <form asp-action="SetupTwoFactor" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group mb-3">
                                <label asp-for="VerificationCode"></label>
                                <input asp-for="VerificationCode" class="form-control" placeholder="Enter 6-digit code" />
                                <span asp-validation-for="VerificationCode" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-success">Enable 2FA</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
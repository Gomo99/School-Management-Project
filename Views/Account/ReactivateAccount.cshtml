@model IEnumerable<SchoolProject.Models.Account>

@{
    ViewData["Title"] = "User Management";
}

@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container-fluid px-4">
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white d-flex flex-column flex-md-row justify-content-between align-items-center gap-3 rounded-top-4">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Manage Users</h5>

                    <div class="d-flex align-items-center gap-2 w-100 w-md-auto">
                        <form method="get" class="d-flex w-100" role="search">
                            <input type="text" name="search" class="form-control" placeholder="Search by name or email..." />
                            <button type="submit" class="btn btn-light ms-2"><i class="bi bi-search"></i></button>
                        </form>

                        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-light">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Name @user.Surname</td>
                                    <td>@user.Email</td>
                                    <td>@user.Role</td>
                                    <td>
                                        @if (user.UserStatus == UserStatus.Inactive)
                                        {
                                            <span class="badge bg-danger rounded-pill">Inactive</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success rounded-pill">Active</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (user.UserStatus == UserStatus.Inactive)
                                        {
                                            <form asp-action="ReactivateAccount" asp-route-id="@user.UserID" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-success rounded-pill px-3">
                                                    <i class="bi bi-person-check"></i> Reactivate
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

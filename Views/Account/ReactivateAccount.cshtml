@model IEnumerable<SchoolProject.Models.Account>

@{
    ViewData["Title"] = "User Management";
}

<partial name="_NotificationPartial" />



@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container-fluid px-4">
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Manage Users</h5>
                    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-light">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>

                <div class="card-body p-4">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Name @user.Surname</td>
                                    <td>@user.Email</td>
                                    <td>@user.Role</td>
                                    <td>
                                        <span class="badge @(user.UserStatus == UserStatus.Inactive ? "bg-danger" : "bg-success") rounded-pill">
                                            @(user.UserStatus == UserStatus.Inactive ? "Inactive" : "Active")
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (user.UserStatus == UserStatus.Inactive)
                                        {
                                            <form asp-action="ReactivateAccount" asp-route-id="@user.UserID" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-success rounded-pill px-3">
                                                    <i class="bi bi-person-check"></i> Reactivate
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

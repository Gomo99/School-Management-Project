@model SchoolProject.Models.AssessmentType
@{
    ViewData["Title"] = "Assessment Type Details";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Description</dt>
                <dd class="col-sm-9">@Model.AssessmentTypeDescription</dd>

                <dt class="col-sm-3 fw-bold">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.AssessmentTypeStatus == SchoolProject.Models.AssessmentTypeStatus.Active)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="EditAssessmentType" asp-route-id="@Model.AssessmentTypeID" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="ManageAssessmentType" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back
            </a>
        </div>
    </div>
</div>

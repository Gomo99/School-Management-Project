@model SchoolProject.Models.AssessmentType
@{
    ViewData["Title"] = "Assessment Type Details";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}
<h2>@ViewData["Title"]</h2>

<div>
    <h4>Assessment Type</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.AssessmentTypeDescription</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.AssessmentTypeStatus</dd>
    </dl>
</div>

<a asp-action="EditAssessmentType" asp-route-id="@Model.AssessmentTypeID" class="btn btn-primary">Edit</a>
<a asp-action="ManageAssessmentType" class="btn btn-secondary">Back</a>

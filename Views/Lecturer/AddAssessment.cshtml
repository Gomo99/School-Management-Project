@model SchoolProject.Models.Assessment
@{
    ViewData["Title"] = "Add Assessment";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0"><i class="bi bi-journal-plus me-2"></i>Add New Assessment</h4>
                </div>
                <div class="card-body p-4">

                    <form asp-action="AddAssessment" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="StudentModuleID" class="form-label fw-bold"></label>
                            <select asp-for="StudentModuleID" class="form-select" asp-items="ViewBag.StudentModuleID"></select>
                            <span asp-validation-for="StudentModuleID" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AssessmentTypeID" class="form-label fw-bold"></label>
                            <select asp-for="AssessmentTypeID" class="form-select" asp-items="ViewBag.AssessmentTypeID"></select>
                            <span asp-validation-for="AssessmentTypeID" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label fw-bold"></label>
                            <input asp-for="DueDate" class="form-control" type="date" />
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="ManageAssessments" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle me-1"></i> Save
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

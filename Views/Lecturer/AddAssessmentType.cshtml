@model SchoolProject.Models.AssessmentType
@{
    ViewData["Title"] = "Add Assessment Type";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="AddAssessmentType" method="post" class="needs-validation" novalidate>
                <div class="form-floating mb-3">
                    <input asp-for="AssessmentTypeDescription" class="form-control" placeholder="Enter assessment type description" />
                    <label asp-for="AssessmentTypeDescription"></label>
                    <span asp-validation-for="AssessmentTypeDescription" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                    <a asp-action="ManageAssessmentType" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

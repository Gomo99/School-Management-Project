@model SchoolProject.Models.AssessmentType
@{
    ViewData["Title"] = "Edit Assessment Type";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditAssessmentType" method="post">
                <input type="hidden" asp-for="AssessmentTypeID" />

                <div class="mb-3">
                    <label asp-for="AssessmentTypeDescription" class="form-label fw-bold"></label>
                    <input asp-for="AssessmentTypeDescription" class="form-control" placeholder="Enter assessment type description" />
                    <span asp-validation-for="AssessmentTypeDescription" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save me-1"></i> Save
                    </button>
                    <a asp-action="ManageAssessmentType" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

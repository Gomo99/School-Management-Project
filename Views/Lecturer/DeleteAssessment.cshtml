@model SchoolProject.Models.Assessment
@{
    ViewData["Title"] = "Delete Assessment";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-trash me-2"></i> Delete Assessment</h4>
        </div>
        <div class="card-body">
            <p class="lead text-center">Are you sure you want to delete this assessment?</p>
            <hr />

            <dl class="row">
                <dt class="col-sm-4">Student Name</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-primary">
                        @Model.StudentModule?.Student?.Name @Model.StudentModule?.Student?.Surname
                    </span>
                </dd>

                <dt class="col-sm-4">Module</dt>
                <dd class="col-sm-8">
                    
                </dd>

                <dt class="col-sm-4">Assessment Type</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-info text-dark">
                        @Model.AssessmentType?.AssessmentTypeDescription
                    </span>
                </dd>

                <dt class="col-sm-4">Due Date</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-warning text-dark">@Model.DueDate.ToShortDateString()</span>
                </dd>
            </dl>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <form asp-action="DeleteAssessment" method="post">
                    <input type="hidden" asp-for="AssessmentID" />
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash me-1"></i> Delete
                    </button>
                </form>
                <a asp-action="ManageAssessments" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>

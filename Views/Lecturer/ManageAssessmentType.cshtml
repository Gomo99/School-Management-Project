@model IEnumerable<SchoolProject.Models.AssessmentType>
@{
    ViewData["Title"] = "Manage Assessment Types";
}
@section Sidebar {
    @await Html.PartialAsync("_SidebarPartial")
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="AddAssessmentType" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Add New Assessment Type
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center align-middle">
                            <td>@item.AssessmentTypeDescription</td>
                            <td>
                                <span class="badge @(
                                      item.AssessmentTypeStatus.ToString() == "Active" ? "bg-success" : "bg-secondary")">
                                @item.AssessmentTypeStatus
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="DetailsAssessmentType" asp-route-id="@item.AssessmentTypeID" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="EditAssessmentType" asp-route-id="@item.AssessmentTypeID" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="DeleteAssessmentType" asp-route-id="@item.AssessmentTypeID" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-x-circle"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</div>
